mixin postInfo(item, showCategory)
    .post-info
        != full_date(item.date, 'll')
        if showCategory && item.categories
            span.categories <i class="fa fa-bookmark" aria-hidden="true"></i>
            for category in item.categories.toArray()
                a(class="post-category" href=url_for_lang(category.path))= "#"+category.name
        if item.from && (is_home() || is_post())
            a.post-from(href=item.from target="_blank" title=item.from)

//- Index Page
mixin posts()
    ul.home.post-list
        - page.posts.each(function (item) {
            li.post-list-item
                article.post-block
                    h2.post-title
                        a.post-title-link(href= url_for_lang(item.path))
                            != item.title
                    +postInfo(item, true)
                    .post-content
                        != item.excerpt
                    a.read-more(href= url_for_lang(item.path))!= __('more')
        - })

//- Archive Page
mixin postList()
    .archive
        - var year = 0;
        - var change = false;
        - page.posts.each(function (item) {
            if (page.lang === item.lang)
                - var itemYear = date(item.date, 'YYYY') - 0;
                - change = year !== itemYear;
                - year = change ? itemYear : year;
                if change
                    h2.archive-year!= year
                .post-item
                    +postInfo(item, false)
                    a.post-title-link(href= url_for_lang(item.path))
                        != item.title
        - })
        h2.archive-year
            != __("galleries")
        - site.pages.each(function(localPage) {
            if page.lang === localPage.lang && localPage.path.indexOf("galleries/") !== -1
                .post-item
                    +postInfo(localPage, false)
                    a.post-title-link(href= path_for_lang(localPage.path))
                        != localPage.title
        - })
        if !page.category && !page.tag
            - var categories = []
            - var tags = []
            - page.posts.each(function (post) {
                if page.lang === post.lang
                    - post.categories.data.forEach(function (category) {
                        if categories.indexOf(category.name) === -1
                            - categories.push(category.name)
                    - })
                    - post.tags.data.forEach(function (tag) {
                        if tags.indexOf(tag.name) === -1
                            - tags.push(tag.name)
                    - })
            - })
            h2.archive-year
                != __("categories")
            .post-item.post-content
                != list_categories_i18n({show_count: false, depth: 2, class: 'nav-category', style: 'list', category_names: categories})
            h2.archive-year
                != __("tags")
            .all-tags.tag-content
                != tag_cloud_i18n(site.tags, {color: true, start_color: "#9400D3", end_color: "#ff00d3", tag_names: tags})

//- Post Page
mixin post(item)
    .post
        article.post-block
            h1.post-title
                != item.title
            +postInfo(item, true)
            .post-content
                != item.content
            if item.tags
                p.post-tags <i class="fa fa-tags" aria-hidden="true"></i>
                    for tag in item.tags.toArray()
                        a(href=url_for_lang(tag.path))=  '#' + tag.name