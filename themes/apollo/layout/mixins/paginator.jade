mixin home()
    - var prev = page.prev_link
    - var next = page.next_link
    .paginator
        if page.next
            a.next(href=url_for(next))!= __('next')
        if page.prev
            a.prev(href=url_for(prev))!= __('prev')

mixin post()
    - var prev = page.prev ? page.prev : false;
    while (prev !== false && prev.lang !== page.lang)
        - prev = prev.prev ? prev.prev : false;
    - prev = prev ? prev.path : false

    - var next = page.next ? page.next : false;
    while (next !== false && next.lang !== page.lang)
        - next = next.next ? next.next : false;
    - next = next ? next.path : false

    .paginator
        if next
            a.next(href=url_for(next))!= __('next_post')
        if prev
            a.prev(href=url_for(prev))!= __('prev_post')